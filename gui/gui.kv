ScreenManagement:
    MenuScreen:
        name:'menu'
    SettingsScreen:
        name:'settings'

<MenuScreen>:
    container: container
    FloatLayout:
        Label:
            id: type
            text: 'Typ wyrobu:'
            pos: 10,410
            size_hint: .2, .4

        ToggleButton:
            text: 'Wyroby dlugie'
            group: 'type'
            pos: 150,530
            size_hint: .15, .08

        ToggleButton:
            text: 'Wyroby plaskie'
            group: 'type'
            pos: 150,485
            size_hint: .15, .08

        Label:
            text: 'Ilosc materialow wyjsciowych:'
            pos: 380,410
            size_hint: .2, .4

        TextInput:
            id: number_of_materials
            input_type: 'number'
            input_filter: 'int'
            multiline: False
            size_hint: .1, .07
            pos: 580,510
            font_size: 20
            on_text_validate:
                root.on_enter(value=number_of_materials.text)

        Label:
            text: 'Nr:'
            pos: 100,320
            size_hint: .2, .4
        Label:
            text: 'Dlugosc:'
            pos: 200,320
            size_hint: .2, .4


        Label:
            text: '='
            pos: 300,320
            size_hint: .2, .4
        Label:
            text: '>='
            pos: 400,320
            size_hint: .2, .4
        Label:
            text: 'Zamowiona ilosc:'
            pos: 550,320
            size_hint: .2, .4


        ScrollView:
            pos: 80,110
            size_hint: 1.5,0.5
            bar_width: 1
            bar_color: 1, 0, 0, 1   # red
            bar_inactive_color: 0, 0, 1, 1   # blue
            effect_cls: "ScrollEffect"
            scroll_type: ['bars']

            GridLayout:
                id: container
                size_hint_x: 0.5
                size_hint_y: None
                cols: 5
                row_default_height: '30dp'
                spacing: 0, 0
                padding: 0, 0

        Label:
            text: 'Calkowita dlugosc:'
            pos: -270,-250
            size_hint: 1, 1

        TextInput:
            id: total_length
            multiline: False

            size_hint: .1, .07
            pos: 200,30
            font_size: 18
            on_text_validate: root.save_total_length(value=total_length.text)

        Label:
            text: 'Cena za m odpadow:'
            pos: 0,-250
            size_hint: 1, 1

        TextInput:
            id: waste_price
            input_type: 'number'
            multiline: False

            size_hint: .1, .07
            pos: 500,30
            font_size: 18
            on_text: root.save_value(value=waste_price.text)



        Button:
            text: 'Calculate'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current='settings'
                root.calculate()
            size_hint: .1, .09
            pos: 640, 30

<SettingsScreen>
